@model Domain.Entities.Product

<div class="well">
    @*картинка*@
    @if (Model.ImageData != null)
    {
        <div class="pull-left" style="margin-right: 10px">
            <img class="img-thumbnail" width="80" height="80"
                 src="@Url.Action("GetImage", "Product",
                new { Model.Prod_Id })" />
        </div>
    }
    
    @*Стоимость*@
    <h3>
        <strong>@Model.Prod_Name</strong>
        <span class="pull-right label label-primary">@Model.Prod_Price.ToString("# грн.")</span>
    </h3>

    @*Корзинка*@
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.Prod_Id)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Добавить в корзину" />
        </div>
    }
    <span class="lead">@Model.Prod_Description</span>
</div>